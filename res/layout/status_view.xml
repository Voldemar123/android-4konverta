<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<TextView android:id="@+id/account_login" style="@android:style/TextAppearance.Large"
		android:layout_height="wrap_content" android:layout_width="wrap_content"
		android:layout_marginBottom="5pt" />


	<LinearLayout android:orientation="horizontal"
		android:id="@+id/execution_layout_envelope_spent_remaining"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

		<TextView android:text="@string/country" android:textStyle="bold"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true" />

		<TextView android:layout_alignParentLeft="true" android:id="@+id/country"
			android:layout_weight="2" android:layout_height="wrap_content"
			android:layout_width="wrap_content" />

		<TextView android:text="@string/currency" android:textStyle="bold"
			android:layout_weight="1" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:layout_alignParentLeft="true" />

		<TextView android:layout_alignParentLeft="true" android:id="@+id/currency"
			android:layout_weight="2" android:layout_height="wrap_content"
			android:layout_width="wrap_content" />

	</LinearLayout>

	<TextView android:text="@string/persons" android:textStyle="bold"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_marginTop="5pt" />

	<GridView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/persons" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:columnWidth="50dp"
		android:numColumns="auto_fit" android:verticalSpacing="10dp"
		android:horizontalSpacing="10dp" android:stretchMode="columnWidth"
		android:gravity="center" />

	<TextView android:text="@string/accounts" android:textStyle="bold"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_marginTop="5pt" />

	<ListView android:id="@+id/accounts" android:layout_height="wrap_content"
		android:layout_width="match_parent" />

	<TextView android:id="@+id/accounts_empty"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:visibility="invisible" android:text="@string/accounts_no_items" />

</LinearLayout>